<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_8sdp"
        >

        <TextView
            android:id="@+id/tvBrexit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:text="Don't you know Brexit ?"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnFindout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:background="#FFF"
            android:text="@string/find_out"
            android:textColor="@color/colorFindout"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvWhere"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Where are you from?"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/_25sdp" />

    <Button
        android:id="@+id/btnSelectCountry"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_select"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="left|center_vertical"
        android:text="Select Your Country"
        android:textColor="#5f5e5e"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text"
        android:textColor="@color/colorBlue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_28sdp"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/btnLeave"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/btn_leave"
            android:text="Leave"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnRemain"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="right"
            android:background="@drawable/btn_remain"
            android:text="Remain"
            android:textColor="#000" />
    </LinearLayout>

</LinearLayout>