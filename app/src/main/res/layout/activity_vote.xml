<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".VoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="0.70"
            android:textColor="@color/colorBlack"
            android:text="Don't you know Brexit ?"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Button
            android:id="@+id/btnFindoutVoteActivity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="0.30"
            android:background="#FFF"
            android:stateListAnimator="@null"
            android:text="@string/find_out"
            android:textColor="@color/colorFindout"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Where are you from ?"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/_25sdp" />

    <Button
        android:id="@+id/btnSelectedCountry"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_select"
        android:drawableRight="@drawable/ic_arrow"

        android:gravity="left|center_vertical"
        android:text="Select Country"
        android:textAlignment="center"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="0dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avata" />

        <TextView
            android:id="@+id/tvNameCountrySelectedToVote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:background="@color/colorBlue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:text="Helloaaaaaaaaa"
            android:textColor="#FFFFFF" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" Edit Photo "
                android:textColor="#000"
                android:id="@+id/textView5" />
        </RelativeLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0"
            android:id="@+id/btnEditPhoto"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/text"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBlue" />





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/btnLeaveVote"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_98sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/btn_leave"
            android:text="Leave"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnRemainVote"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_98sdp"
            android:layout_gravity="right"
            android:background="@drawable/btn_remain"
            android:text="Remain"
            android:textColor="#000" />
    </LinearLayout>

</LinearLayout>